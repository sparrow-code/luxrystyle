            <p class="form-title">Please login using account detail bellow</p>
            <div class="input-box flex-r">
                <i class="fas fa-envelope"></i>
                <input type="text" name="email" placeholder="Email Address">
            </div>
            <div class="input-box flex-r">
                <i class="fas fa-lock"></i>
                <input type="password" name="password" placeholder="Password">
            </div>
            <a href="/forget_password" class="form-line">Forgot your password?</a>
            <input type="submit" name="submit" Value="Login" class="btn pink-btn" />
            <a href="/register" class="form-line register-line">Donâ€™t have an Account? Create account</a>
        </form>
    </div>
</section>

